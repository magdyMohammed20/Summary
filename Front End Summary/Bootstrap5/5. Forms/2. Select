(1) Select Sample
------------------

      <select class="form-select">
        <option selected>1</option>
        <option>2</option>
        <option>3</option>
      </select>
      
      
(2) Select Sizing [form-select-sm , form-select-lg]
------------------

     <select class="form-select">
        <option selected>1</option>
        <option>2</option>
        <option>3</option>
      </select>
      <select class="form-select form-select-sm">
        <option selected>1</option>
        <option>2</option>
        <option>3</option>
      </select>
      <select class="form-select form-select-lg">
        <option selected>1</option>
        <option>2</option>
        <option>3</option>
      </select>
      
      
(3) Multiple Select
--------------------

      <select multiple class="form-select">
        <option selected>1</option>
        <option>2</option>
        <option>3</option>
      </select>
      
      
(4) Select Size Attribute
--------------------------
	
      <!-- Shows Only First 2 Options At First -->	
      <select multiple size="2" class="form-select">
        <option selected>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
      </select>
